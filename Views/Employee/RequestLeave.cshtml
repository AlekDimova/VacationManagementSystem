@model VacationManagementSystem.Models.LeaveRequest

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Request Leave</h2>

            <form asp-action="RequestLeave" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LeaveType"></label>
                    <select asp-for="LeaveType" class="form-control" id="leaveType">
                        <option value="Annual">Annual</option>
                        <option value="Bonus">Bonus</option>
                        <option value="Sick">Sick</option>
                    </select>
                    <span asp-validation-for="LeaveType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Reason"></label>
                    <textarea asp-for="Reason" class="form-control"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <div class="form-group" id="medicalReportGroup" style="display: none;">
                    <label>Medical Report</label>
                    <input type="file" name="medicalReport" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>

            <script>
                document.getElementById('leaveType').addEventListener('change', function () {
                    if (this.value === 'Sick') {
                        document.getElementById('medicalReportGroup').style.display = 'block';
                    } else {
                        document.getElementById('medicalReportGroup').style.display = 'none';
                    }
                });
            </script>
        </div>
    </div>
</div>