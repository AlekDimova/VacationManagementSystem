@model VacationManagementSystem.Models.BonusDays

<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Edit Bonus Day</h2>

            <form asp-action="EditBonusDay" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="BonusDaysId" />

                <div class="form-group">
                    <label asp-for="EmployeeId"></label>
                    <input asp-for="EmployeeId" class="form-control" />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Days"></label>
                    <input asp-for="Days" class="form-control" />
                    <span asp-validation-for="Days" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>
    </div>
</div>