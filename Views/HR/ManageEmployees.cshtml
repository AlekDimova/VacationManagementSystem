<div class="container">
    <h2 class="mb-4">Manage Employees</h2>

    <a asp-action="AddEmployee" class="btn btn-primary mb-3">Add Employee</a>

    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Employee ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)

                    {
                        <tr>
                            <td>@employee.EmployeeId</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.Email</td>
                            <td>
                                <a asp-action="EditEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>